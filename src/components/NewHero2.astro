    <div class="fingy-title2 hidden desktop:flex text-white text-2xl desktop:text-3xl font-bold">
      THE BONK SQUIRREL
    </div>
    
    <!-- Navigation Links -->
    <div class="hidden desktop:flex items-center space-x-8">
      <a href="#" class="font-semibold nav-link text-white text-lg border border-transparent hover:border-white p-2 rounded-lg transition-colors duration-200 hover:no-underline">
