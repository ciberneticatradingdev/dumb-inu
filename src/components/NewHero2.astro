      <a href="#" class="font-semibold nav-link text-white text-lg border border-transparent hover:border-white p-2 rounded-lg transition-colors duration-200 hover:no-underline">
        DEXSCREENER
      </a>
    </div>
    
    <!-- CTA Button -->
    <button class="hidden desktop:flex bg-white hover:bg-gray-100 text-black font-bold text-sm desktop:text-base px-4 desktop:px-6 py-2 desktop:py-3 rounded-lg border-2 border-black shadow-lg transform transition-all duration-200 hover:scale-105 active:scale-95">
      BUY ON BONK
    </button>
    
    <!-- Mobile Menu Button -->
    <!-- <button class="desktop:hidden text-white text-2xl" id="mobile-menu-btn">
      â˜°
    </button> -->
  </nav>
  
  <!-- Mobile Menu (Hidden by default) -->
  <div class="desktop:hidden hidden bg-sky-600/90 backdrop-blur-sm px-6 py-4 space-y-4 absolute top-16 left-0 w-full z-10" id="mobile-menu">
    <a href="#" class="block text-white font-semibold text-lg hover:text-orange-200 transition-colors duration-200">
      ABOUT
    </a>

    <a href="#" class="block text-white font-semibold text-lg hover:text-orange-200 transition-colors duration-200">
