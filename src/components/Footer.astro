---
import {CA, tg, x} from "../utils/utils";
---

<footer class="w-full flex justify-center items-center px-4">
    <div class="max-w-7xl bg-black/10 rounded-[50px] w-full flex flex-col md:flex-row items-center justify-between gap-8 p-8 mb-8">
        <!-- Left side with text and features -->
        <div class="w-full md:w-7/12 flex flex-col gap-8">
            <div class="flex flex-col gap-4">
                <h2 class="text-4xl md:text-5xl font-bold text-white">Join Our Community</h2>
                <p class="text-white/70 text-lg">Be part of the revolution. Join the $BULL community and experience the power of the most energetic token on Solana.</p>
            </div>
            
            <div class="bg-red- w-full flex gap-8">

              <a href={tg} class=" w-20 rounded-xl hover:scale-105 transition-all ">
                <img src="/social/telegram3.svg"/>
              </a>

              <a href={x} class=" w-20 rounded-xl hover:scale-105 transition-all ">
                <img src="/social/x2.png"/>
              </a>

              <a href=`https://dexscreener.com/solana/${CA}` class=" w-20 rounded-xl hover:scale-105 transition-all ">
                <img src="/social/dex.png"/>
              </a>

              <a href=`https://jup.ag/swap/SOL-${CA}` class=" w-20 rounded-xl hover:scale-105 transition-all ">
                <img src="/social/jup.png"/>
              </a>

              <a href={`https://raydium.io/swap/?inputCurrency=sol&outputCurrency=${CA}&inputMint=sol&outputMint=${CA}`} class=" w-20 rounded-xl hover:scale-105 transition-all ">
                <img src="/social/raydium.png"/>
              </a>

    
            </div>

        </div>

        <!-- Right side with breathing image -->
        <div class="w-full md:w-5/12 flex justify-center">
            <img src="/zoomie/footer.png" alt="RedBull Wings" class="w-96 breathing-animation">
        </div>
    </div>
</footer>

<style>
    .breathing-animation {
        animation: breathing 5s ease-in-out infinite;
    }

    @keyframes breathing {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
        100% {
            transform: scale(1);
        }
    }
</style>
