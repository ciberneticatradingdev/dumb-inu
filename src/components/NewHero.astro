<section id="hero" class="w-full h-screen relative">
  <!-- Responsive Hero Image Section - Full Screen -->
  <div class="w-full h-screen">
    <!-- Mobile (9:16) - Only show on small screens -->
    <img 
      src="/hero/hero-916.png" 
      alt="RedBull Hero Mobile" 
      class="w-full h-full object-cover block sm:hidden"
    >
    
    <!-- Tablet/iPad Pro (4:3) - Show on medium screens and iPad Pro -->
    <img 
      src="/hero/hero-43.png" 
      alt="RedBull Hero Tablet" 
      class="w-full h-full object-cover hidden sm:block desktop:hidden"
    >
    
    <!-- Desktop (16:9) - Only show on large desktop screens -->
    <img 
      src="/hero/hero-169.png" 
      alt="RedBull Hero Desktop" 
      class="w-full h-full object-cover hidden desktop:block"
    >
  </div>
</section>
