---
import { CA, TWITTER_URL, TIKTOK_URL, TELEGRAM_URL, BUY_URL, DEXSCREENER_URL } from '../utils/utils';
---

<section id="hero-section" class="w-full min-h-screen flex flex-col overflow-hidden relative bg-[url('/bg2.png')] bg-cover bg-left">
  
  <!-- Main Content Container -->
  <div class="main-content w-full max-w-8xl mx-auto px-4 flex flex-col desktop:flex-row items-center desktop:items-end justify-end desktop:justify-between gap-8 flex-1 pt-8 desktop:pt-0">

    <!-- Text Content - First in mobile, Right in desktop -->
    <div class="text-content flex-1 flex flex-col justify-center items-center text-center desktop:text-right z-10 desktop:self-center">
      <!-- Main Title -->
      <h1 class="fingy-title text-center text-6xl sm:text-7xl desktop:text-8xl xl:text-9xl font-bold mb-4 leading-none">
        $feng È£é 
      </h1>
      
      <!-- Subtitle -->
      <p class="text-center text-xl sm:text-2xl desktop:text-xl text-black font-semibold mb-8 max-w-xl mx-auto desktop:mx-0 bg-white p-4 rounded-lg border-4 border-black">
        Feng È£é means "wind" in Chinese ‚Äî the invisible force that moves everything. $feng harnesses this ancient energy, flowing through markets with unstoppable momentum and bringing prosperity to those who ride the wind. üå™Ô∏èüí®      </p>
      
      <!-- CTA Button -->

    </div>
    
    <!-- Character Image - Second in mobile, Left in desktop -->
    <div class="flex-1 flex justify-center desktop:justify-start items-end h-full">
      <div class="relative flex items-end justify-center w-full h-full">
        <img 
          src="/feng2.svg" 
          alt="feng" 
          class="h-auto object-contain drop-shadow-2xl drop-shadow-white object-bottom"
          loading="eager"
          fetchpriority="high"
          style="margin-bottom: 0; padding-bottom: 0;"
        >
      </div>
    </div>

  </div>
  
  <!-- Background Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Subtle pattern or additional styling can go here -->
  </div>
</section>

<style>
  .fingy-title {
    font-family: 'Amiger Cartoon', sans-serif;
    color: white;
    letter-spacing: 0.3px;
    -webkit-text-stroke-width: 2.5px;
    -webkit-text-stroke-color: black;
    text-shadow: 4px 4px #000;
    font-size: 135px;
    font-weight: 500;
    line-height: 140px;
    margin-top: 0;
  }

    .fingy-title2 {
    font-family: 'Amiger Cartoon', sans-serif;
    color: white;
    letter-spacing: 0.3px;
    -webkit-text-stroke-width: 1.5px;
    -webkit-text-stroke-color: black;
    text-shadow: 2px 2px #000;
    font-weight: 500;
    margin-top: 0;
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    #hero-section {
      min-height: 100vh;
      height: auto;
      max-height: none;
      padding-top: 2rem;
      padding-bottom: 0;
    }
    
    .main-content {
      min-height: calc(100vh - 4rem);
      padding-top: 1rem;
      padding-bottom: 0;
      justify-content: flex-end !important;
    }
    
    /* Mobile: natural order (text first, image second) */
    
    .fingy-title {
      font-size: 4rem;
      line-height: 4.5rem;
      margin-bottom: 1rem;
    }
    
    /* Ensure image container takes appropriate space and stays at bottom */
     .flex-1:last-child {
       flex: 0 0 auto;
       max-height: 50vh;
       display: flex;
       align-items: flex-end;
       justify-content: center;
       position: relative;
     }
     
     .flex-1:last-child > div {
       display: flex;
       align-items: flex-end;
       justify-content: center;
       height: 100%;
       width: 100%;
     }
     
     .flex-1:last-child img {
       max-height: 45vh;
       width: auto;
       object-fit: contain;
       object-position: bottom;
       display: block;
     }
  }
  
  @media (max-width: 480px) {
    #hero-section {
      padding-bottom: 0;
    }
    
    .fingy-title {
      font-size: 3rem;
      line-height: 3.5rem;
      margin-bottom: 0.5rem;
    }
    
    .main-content {
      gap: 1rem;
      padding-top: 0.5rem;
      padding-bottom: 0;
      justify-content: flex-end !important;
    }
    
    /* Mobile: natural order (text first, image second) */
    
    /* iPhone Safari specific adjustments */
     .flex-1:last-child {
       max-height: 40vh;
       align-items: flex-end;
       justify-content: center;
     }
     
     .flex-1:last-child > div {
       align-items: flex-end;
       justify-content: center;
       height: 100%;
     }
     
     .flex-1:last-child img {
       max-height: 35vh;
       object-position: bottom;
       align-self: flex-end;
     }
  }
  
  /* Desktop styles */
  @media (min-width: 1280px) {
    .fingy-title {
      font-size: 6rem;
      line-height: 6.5rem;
    }
    
    /* Desktop: reorder elements - image left, text right */
    .text-content {
      order: 2;
    }
    
    .flex-1:last-child {
      order: 1;
    }
  }
  
  /* iPad Pro specific adjustments */
  @media (min-width: 1024px) and (max-width: 1279px) {
    #hero-section {
      min-height: 100vh;
      padding-top: 2rem;
    }
    
    .fingy-title {
      font-size: 5rem;
      line-height: 5.5rem;
      text-align: center;
    }
    
    /* Force mobile-like layout on iPad Pro */
    .main-content {
      flex-direction: column !important;
      align-items: center !important;
      justify-content: flex-end !important;
      text-align: center !important;
    }
    
    .text-content {
      text-align: center !important;
      align-items: center !important;
    }
    
    .text-content p {
      text-align: center !important;
      margin-left: auto !important;
      margin-right: auto !important;
    }
    
    /* iPad Pro image positioning */
    .flex-1:last-child {
      align-items: flex-end !important;
      justify-content: center !important;
      flex: 0 0 auto !important;
    }
    
    .flex-1:last-child > div {
      align-items: flex-end !important;
      justify-content: center !important;
      height: 100% !important;
    }
    
    .flex-1:last-child img {
      object-position: bottom !important;
      align-self: flex-end !important;
    }
  }
</style>

<script>
  // Mobile menu functionality (if needed for future use)
  document.addEventListener('DOMContentLoaded', function() {
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>